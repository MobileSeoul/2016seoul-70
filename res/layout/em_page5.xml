<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECA8B2"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="10"
            android:useDefaultMargins="false" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/em_btn5" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:src="@drawable/east_map" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:text="서울특별시 송파구 위례성대로 14 한미타워 19, 20층 한미사진미술관"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:text="\n\n기간/일자\n2016.08.27(토) - 2016.12.03(토)\n\n이용요금\n성인 6,000원\n학생 5,000원\n10인 이상 단체 1,000원 할인 \n\n이용시간\n평일 10:00~19:00 / 토요일,공휴일 11:00~18:30\n\n쉬는날\n매주 일요일 휴관"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/callBtn"
                android:layout_width="78.4dp"
                android:layout_height="83.2dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="5"
                android:background="@drawable/call"
                android:onClick="callBtn" />

            <Button
                android:id="@+id/textBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:background="@drawable/button_button01"
                android:onClick="textBtn"
                android:text="홈페이지주소: http://www.photomuseum.or.kr/"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnSpan="2"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_box"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbHorizontal="@drawable/scrollbar_bg1"
                    android:scrollbarTrackHorizontal="@drawable/scrollbar_bg2" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/em5_p1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/em5_p2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/em5_p3" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</LinearLayout>