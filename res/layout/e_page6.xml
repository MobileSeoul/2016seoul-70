<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECA8B2"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="10"
            android:useDefaultMargins="false" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/e_btn6" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:src="@drawable/east_map" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:text="서울특별시 강남구 영동대로 416 KTnG타워 3층"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:text="주차시설 : \nKTnG타워 지하3~6층 주차장 (지상에 장애우용 주차장)\n공연관람객 주차할인권 5시간기준 3000원\n공연 종료 후 1시간 이내 출차"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/callBtn"
                android:layout_width="78.4dp"
                android:layout_height="83.2dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="5"
                android:background="@drawable/call"
                android:onClick="callBtn" />

            <Button
                android:id="@+id/textBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:background="@drawable/button_button01"
                android:onClick="textBtn"
                android:text="홈페이지주소 : http://www.sangsangarthall.com"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnSpan="2"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_box"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbHorizontal="@drawable/scrollbar_bg1"
                    android:scrollbarTrackHorizontal="@drawable/scrollbar_bg2" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/e6_p1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/e6_p2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/e6_p3" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</LinearLayout>