<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECA8B2"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="10"
            android:useDefaultMargins="false" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/wm_btn3" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:src="@drawable/west_map" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:text="서울특별시 관악구 관악로 1 서울대학교 미술관"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_rowSpan="2"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:text="이용요금 : \n일반(만 19세 이상, 대학생 포함) 3,000원\n청소년(만 7세~만 18세) 2,000원\n어린이(만 3세~만 6세) 2,000원 (보호자 동반시 1인 무료)\n단체(20인 이상) 2,000원 (인솔자 1인 무료)\n\n이용시간\n화요일∼일요일 10:00∼18:00(입장마감 17:30)\n\n휴무일\n월요일, 개교기념일(10월15일) 및 국정공휴일, 전시준비기간\n\n주차시설 : \n교내 대운동장 주차장 및 교내도로의 지정된 곳에 주차 가능\n주차 요금 : \n최초 30분 1,500원 초과 10분마다 500원"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/callBtn"
                android:layout_width="78.4dp"
                android:layout_height="83.2dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="5"
                android:background="@drawable/call" />

            <Button
                android:id="@+id/textBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:background="@drawable/button_button01"
                android:onClick="textBtn"
                android:text="홈페이지주소 : http://www.snumoa.org/Moa_new/index.asp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnSpan="2"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_box"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbHorizontal="@drawable/scrollbar_bg1"
                    android:scrollbarTrackHorizontal="@drawable/scrollbar_bg2" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/wm3_p1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/wm3_p2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/wm3_p3" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </GridLayout>
    </ScrollView>

</LinearLayout>